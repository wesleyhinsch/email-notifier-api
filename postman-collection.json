              "raw": "{\n  \"name\": \"Alertas de Vendas\",\n  \"monitoredEmail\": \"meuemail@gmail.com\",\n  \"senderFilter\": \"vendas@loja.com\",\n  \"whatsappNumber\": \"5511999999999\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/monitors",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "monitors"]
            }
          }
        },
        {
          "name": "List All Monitors",
